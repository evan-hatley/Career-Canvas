<div class="row">
    <div class="col-auto">

        <h2>Welcome, {{username}}!</h2>
    </div>
</div>

<div class="col-md-6">
    <h3>Create a New Job:</h3>

    <form class="form new-job-form">
        <div class="form-group">
            <label for="job-title">Job Title:</label>
            <input class="form-input" type="text" id="job-title" name="job-title" />
        </div>

        <div class="form-group">
            <label for="job-status">Status:</label>
            <select id="job-status" name="job-status">
                <option value="applied">Applied</option>
                <option value="interviewed">Interviewed</option>
                <option value="offered">Offered</option>
                <option value="declined">Declined</option>
            </select>
        </div>

        <div class="form-group">
            <label for="job-salary">Salary:</label>
            <textarea class="form-input" id="job-salary" name="job-salary"></textarea>
        </div>
        <div class="form-group">
            <label for="job-location">Location:</label>
            <textarea class="form-input" id="job-location" name="job-location"></textarea>
        </div>
        <div class="form-group">
            <label for="job-notes">Notes:</label>
            <textarea class="form-input" id="job-notes" name="job-notes"></textarea>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary">Add Job</button>
        </div>
    </form>
</div>

{{#if jobs.length}}
<div class="col-md-6 job-list">
    <h3>Existing Jobs:</h3>

    <table class="jobTable">
        <thead>
            <tr>
                <th>Title</th>
                <th>Status</th>
                <th>Salary</th>
                <th>Location</th>
                <th>Notes</th>
                <th>Actions</th>
            </tr>
        </thead>

        <tbody>
            {{#each jobs as |job|}}
            <tr class="col-md-8">
                <td><a href="/job/{{job.id}}">{{job.title}}</a></td>
                <td>{{formatWithCurrentDate status}}</td>
                <td>{{convertToSalary salary}}</td>
                <td>{{location}}</td>
                <td>{{notes}}</td>
                <td>
                    <button class="btn btn-sm btn-danger" data-job-id="{{job.id}}">
                        Delete
                    </button>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>
{{/if}}

{{> job-details}}

