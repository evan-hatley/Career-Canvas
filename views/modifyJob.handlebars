{{#if logged_in}}
<section class="modify-job">
    <div class="form-title">
        <h2>Edit Job</h2>
    </div>

    <form class="forms" id="edit-job-form">
        <div class="form-group">
            <label for="job-title">Job Title:</label>
            <input class="input is-rounded" class="input is-success" class="form-input" type="text" id="job-title"
                value="{{title}}" />
        </div>

        <div class="create-job-padding" class="form-group">
            <label for="job-status">Status:</label>
            <div class="select is-rounded">
                <select id="job-status" name="job-status">
                    {{#if
                    (eq status "Applied")}}
                    <option value="applied" selected>Applied</option>
                    {{else}}
                    <option value="applied">Applied</option>
                    {{/if}}

                    {{#if
                    (eq status "Interviewed")}}
                    <option value="interviewed" selected>Interviewed</option>
                    {{else}}
                    <option value="interviewed">Interviewed</option>
                    {{/if}}

                    {{#if
                    (eq status "Offered")}}
                    <option value="offered" selected>Offered</option>
                    {{else}}
                    <option value="offered">Offered</option>
                    {{/if}}

                    {{#if
                    (eq status "Declined")}}
                    <option value="declined" selected>Declined</option>
                    {{else}}
                    <option value="declined">Declined</option>
                    {{/if}}

                </select>
            </div>
        </div>

        <div class="create-job-padding" class="form-group">
            <label for="job-salary">Salary:</label>
            <textarea class="textarea is-success" placeholder="e.g.- 50000" class="form-input" id="job-salary"
                name="job-salary">{{salary}}</textarea>
        </div>

        <div class="create-job-padding" class="form-group">
            <label for="job-location">Location:</label>
            <textarea class="textarea is-success" placeholder="e.g.- Remote, New York, Denver" class="form-input"
                id="job-location" name="job-location">{{location}}</textarea>
        </div>

        <div class="create-job-padding" class="form-group">
            <label for="job-notes">Notes:</label>
            <textarea class="textarea is-success"
                placeholder="Use this area to include any additional information you may want." class="form-input"
                id="job-notes" name="job-notes">{{notes}}</textarea>
        </div>

        <div class="add-job-btn-spacing">
            <button class="button is-large is-responsive is-success is-rounded" class="btns" id="update-btn"
                type="submit">Update</button>
            <button class="button is-large is-responsive is-danger is-rounded" class="btns" id="delete-btn"
                type="button">Delete</button>
        </div>

    </form>
</section>
{{/if}}

<script src="/js/modifyJob.js"></script>