<div class="col-md-6">
    <h2>Signup</h2>

    <form id="signup-container" class="form signup-form">
        <div class="form-group">
            <label for="username-signup">Username:</label>
            <input class="input is-rounded" class="input is-success" class="form-input" type="text" id="username-signup" />
        </div>

        <div class="form-group">
            <label for="email-signup">Email:</label>
            <input class="input is-rounded" class="input is-success" class="form-input" type="text" id="email-signup" />
        </div>

        <div class="form-group">
            <label for="password-signup">Password:</label>
            <input class="input is-rounded" class="input is-success" class="form-input" type="password" id="password-signup" />
        </div>
        
        <div class="form-group">
            <button class="button is-large is-responsive is-success is-rounded" class="btn btn-primary" type="submit">Signup</button>
        </div>

        <div class="login-link">
            <p>Already have an account? <a href="/login">Login here</a></p>
        </div>
    </form>
</div>

<script src="/js/signup.js"></script>