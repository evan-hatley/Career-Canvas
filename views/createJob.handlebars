{{#if logged_in}}
<section class="new-job">
    <div class="form-title">
        <h2>Create a New Job</h2>
    </div>

    <form class="forms" id="new-job-form">
        <div class="form-group">
            <label for="job-title">Job Title:</label>
            <input class="input is-rounded" class="input is-success" class="form-input" type="text" id="job-title" name="job-title" />
        </div>

        <div class="create-job-padding" class="form-group">
            <label for="job-status">Status:</label>
            <div class="select is-rounded">
            <select id="job-status" name="job-status">
                <option value="applied">Applied</option>
                <option value="interviewed">Interviewed</option>
                <option value="offered">Offered</option>
                <option value="declined">Declined</option>
            </select>
            </div>
        </div>

        <div class="create-job-padding" class="form-group">
            <label for="job-salary">Salary:</label>
            <textarea class="textarea is-success" placeholder="e.g.- 50000" class="form-input" id="job-salary" name="job-salary"></textarea>
        </div>

        <div class="create-job-padding" class="form-group">
            <label for="job-location">Location:</label>
            <textarea class="textarea is-success" placeholder="e.g.- Remote, New York, Denver"class="form-input" id="job-location" name="job-location"></textarea>
        </div>

        <div class="create-job-padding" class="form-group">
            <label for="job-notes">Notes:</label>
            <textarea class="textarea is-success" placeholder="Use this area to include any additional information you may want."class="form-input" id="job-notes" name="job-notes"></textarea>
        </div>
        <div id="add-job-btn-spacing">
        <button class="button is-large is-responsive is-success is-rounded" class="btns" id="create-btn" type="submit">Add Job</button>
        </div>
    </form>
</section>
{{/if}}

<script src="/js/createJob.js"></script>