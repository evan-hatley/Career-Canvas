<div class="column col-md-6">
    <h2>Login</h2>

    <div id="login-container">
        <form class="login-form">

            <div class="input-group">
                <label for="email">Email:</label>
                <input class="input is-rounded" class="input is-success" type="text" id="email" name="email"
                    placeholder="Enter your email" />
            </div>

            <div class="input-group">
                <label for="password">Password:</label>
                <input class="input is-rounded" class="input is-success" type="password" id="password" name="password"
                    placeholder="Enter your password" />
            </div>

            <div id="login-btn-padding" class="input-group">
                <button class="button is-large is-responsive is-success is-rounded" type="submit">Login</button>
            </div>

            <div class="signup-link">
                <p>Don't have an account? <a href="/signup">Sign up here</a></p>
            </div>
        </form>
    </div>
</div>

<script src="/js/login.js"></script>